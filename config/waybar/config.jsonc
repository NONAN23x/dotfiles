{
    "position": "bottom",
    "layer": "top",
    "height": 16,
    "margin-top": 0,
    "margin-bottom": 0,
    "margin-left": 0,
    "margin-right": 0,
    "modules-left": ["custom/launcher", "custom/notifications", "hyprland/workspaces", "hyprland/window"],
    "modules-center": ["cpu", "memory", "disk", "custom/pacman"],
    "modules-right": ["custom/weather", "tray", "custom/randwall", "network", "wireplumber", "backlight", "battery", "clock"],
    // Modules configuration
	"clock": {
		"format": "ÔÄó  {:%I:%M %p}",
		"tooltip": "true",
        	"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        	"format-alt": "ÔÅ≥ {:%d/%m}"
	},
	
  "custom/weather": {
    "exec": "bash $HOME/.scripts/weather.sh",
    "format": " {} üå° ",
    "interval": 500

  },

  "custom/spotify": {
    "format": "{icon} {}",
    // "escape": true,
    "return-type": "json",
    "max-length": 40,
    "interval": 30, // Remove this if your script is endless and write in loop
    "on-click": "playerctl -p spotify play-pause",
    "on-click-right": "killall spotify",
    "smooth-scrolling-threshold": 10, // This value was tested using a trackpad, it should be lowered if using a mouse.
    "on-scroll-up" : "playerctl -p spotify next",
    "on-scroll-down" : "playerctl -p spotify previous",
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources/custom_modules folder
    "exec-if": "pgrep spotify"
},

  "custom/pacman": {
    "format": "{} ÔÜá ",
    "interval": 3600,                     // every hour
    "exec": "checkupdates | wc -l",       // # of updates
    "exec-if": "exit 0",                  // always run; consider advanced run conditions
    // "on-click": "termite -e 'sudo pacman -Syu'; pkill -SIGRTMIN+8 waybar", // update system
    "signal": 8
  },

  "custom/notifications": {
    "tooltip": false,
    "format": "{} {icon}",
    "format-icons": {
      "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-none": "Ôá∑",
      "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-inhibited-none": "Ôá∑"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

	"hyprland/workspaces": {
    "active-only": false,
    "all-outputs": true,
    "disable-scroll": false,
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "on-scroll-down": "hyprctl dispatch workspace +1",
		"format": "{icon}",
		"on-click": "activate",
		"format-icons": {
			"urgent": "ÔÅ™",
			"active": "Û∞ßû",
			"default": "Û∞ßû",
    "sort-by-number": true
    }
    },

	"battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format":"{icon}  {capacity}%",
        "format-charging": "{capacity}% Ôá¶",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
	},

  "memory": {
    "format": "Û∞çõ {}%",
    "format-alt": "Û∞çõ {used}/{total} GiB",
    "interval": 5
  },

  "cpu": {
    "format": "Û∞ª† {usage}%",
    "format-alt": "Û∞ª† {avg_frequency} GHz",
    "interval": 5
  },

  "disk": {
    "format": "Û∞ãä {}%",
    "format-alt": "Û∞ãä {used}/{total} GiB",
    "interval": 5,
    "path": "/home/nonan23x/"
  },
	
	"network": {
        	"format-wifi": "Û∞§®  {essid}",
        	"format-ethernet": "Ôõø {ifname}: Aesthetic",
        	"format-linked": "Ôõø {ifname} (No IP)",
        	"format-disconnected": "Û∞§≠",
        	"format-alt": "Ôõø {ifname}: {ipaddr}/{cidr}",
          "tooltip-format": "{essid}",
          "on-click-right": "nm-connection-editor"
	},

	"tray": {
		"icon-size": 16,
		"spacing": 5
	},

	"backlight": {
        "device": "intel_backlight",
	      "format": "{icon} {percent}%",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
//	"on-scroll-up":,
//	"on-scroll-down":,
	},

	"wireplumber": {
		"format": "{icon} {volume}%",
        	"format-muted": "Û∞ùü MUTED",
		"format-icons": {
			"default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
		},
		"on-click": "bash ~/.scripts/volume mute",
    "on-scroll-up": "bash ~/.scripts/volume up",
    "on-scroll-down": "bash ~/.scripts/volume down",
    "scroll-step": 5,
		"on-click-right": "pavucontrol"
  },

  "custom/randwall": {
    "format": "Û∞èò",
    "on-click": "bash $HOME/.scripts/wall.sh"
  },

  "custom/launcher": {
    "format": "Û∞à∏",
    "on-click": "bash $HOME/.scripts/menu.sh"
//    "on-click": "wofi --show drun -I -a -n -W 500 -H 376 -s ~/.config/wofi/themes/gruvbox.css",
    // "on-click-right": "bash $HOME/.config/rofi/run.sh"  
//    "on-click-right": "wofi --show run -I -a -n -W 500 -H 376 -s ~/.config/wofi/themes/gruvbox.css"  
  },

  "custom/wf-recorder": {
		"format": "{}",
		"interval": "once",
		"exec": "echo 'Ôäç'",
		"tooltip": "false",
		"exec-if": "pgrep 'wf-recorder'",
		"on-click": "exec ./scripts/wlrecord.sh",
		"signal": 8
	},

  "custom/hyprpicker": {
    "format": "Û∞àã",
    "on-click": "hyprpicker -a -f hex",
    "on-click-right": "hyprpicker -a -f rgb"
  }
  }
}
